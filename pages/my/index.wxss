.container {
    width:100%;
    height:100vh;
    background: #f2f2f2
}

.my-msg {
    width:100%;
    background: #fff;
    display:flex;
    flex-direction: column;
    align-items: center;
}

.my-msg .pro-photo {
    width:180rpx;
    height:180rpx;
    border-radius: 50%;
    margin: 50rpx 0 20rpx 0;
    overflow: hidden;
    box-shadow: 0 0 20rpx rgba(0,0,0,.2);
}

.my-msg text {
    line-height: 90rpx;
}

.my-msg .pro-photo image {
    width:180rpx;
    height:180rpx;
}

.my-wallet {
    width: 100%;
    height:100rpx;
    background:#fff;
    margin-top: 30rpx;
    display: flex;
    justify-content: space-between;
}

.my-wallet text {
    line-height: 100rpx;
    display: inline-block; 
    padding: 0 40rpx;
}

.btn-login {
    position: absolute;
    bottom: 50rpx;
    width: 90%;
    left: 5%;
}